<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="600.0" minWidth="800.0" styleClass="rootLayout" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.metropolia.wms.view.RootLayoutController">
   <top>
      <MenuBar fx:id="topMenuBar" prefHeight="37.0" prefWidth="800.0" styleClass="menu" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%programMenu">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="%closeMenu" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%userMenu">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#logout" text="%logoutMenu" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
